<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

    <servlet>
		<servlet-name>Region</servlet-name>
		<servlet-class>peaks.RegionsServlet</servlet-class>
	</servlet>	
	<servlet-mapping>
		<servlet-name>Region</servlet-name>
		<url-pattern>/region</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Peak</servlet-name>
		<servlet-class>peaks.PeaksServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Peak</servlet-name>
		<url-pattern>/peak</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Climber</servlet-name>
		<servlet-class>peaks.ClimbersServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Climber</servlet-name>
		<url-pattern>/climber</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
